{
    physics_body: {
        model: "blockbench/static/cube/25_cm",

        // Tungsten (pure, 99.95%) cube masses:
        // 1cm:   0.019
        // 5cm:   2.413
        // 10cm:  19.30
        // 25cm:  301.6
        // 50cm:  2412.5
        // 100cm: 19300
        mass: 301.6
    },

    particle_emitters: [
        {
            lifetime: {
                lifetime_type: "looping",
                ticks_active: 1,
                ticks_asleep: 2
            },
            rate: {
                rate_type: "steady",
                spawn_rate: 1,
                max_count: 9999
            },
            shape: {
                shape_type: "point"
            },
            offset: {
                x: "math.sin(v.emitter_age / 8)",
                y: 0,
                z: "math.cos(v.emitter_age / 8)"
            },
            particle: {
                environment: {
                    init: "v.scale_mult = 0.7;",

                    // Curves are evaluated before frame
                    curves: {
                        "v.size": {
                            type: "linear",
                            input: "v.age",
                            horizontal_range: "v.max_age",
                            nodes: [1, 0]
                        }
                    },
                    frame: "v.scaled_size = v.size * v.scale_mult"
                },

                model: "orbiter:blockbench/static/particle/dot",
                max_age: 60,
                billboard: "face_center",
                scale: ["v.scaled_size", "v.scaled_size", "v.scaled_size"]
            }
        }
    ]
}